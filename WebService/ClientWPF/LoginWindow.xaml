    <Grid>
        <Button x:Name="btnAcceptLogin" Content="Accept" HorizontalAlignment="Left" Margin="112,163,0,0" VerticalAlignment="Top" Width="75" Click="btnAcceptLogin_Click"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="86,122,0,0" VerticalAlignment="Top" Width="131"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="23" Margin="86,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="86,37,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="87,96,0,0"/>

    </Grid>
</Window>
